function getVote(e,t){document.getElementById("feed-vote").classList.add("voted-"+t),setCookie("anyway-vote-"+e,t,90),xmlhttp=new XMLHttpRequest,xmlhttp.onreadystatechange=function(){4==this.readyState&&200==this.status&&document.getElementById("feed-vote").classList.add("show")},xmlhttp.open("GET","vote.php?vote="+t,!0),xmlhttp.send()}function openOverlay(e){var t=document.querySelector(".overlay");t.classList.toggle("show"),t.classList.add("overlay-panel-"+e),document.body.classList.toggle("overlay-open")}function closeOverlay(){document.body.classList.remove("overlay-open"),document.querySelector(".overlay").classList="overlay"}var themeList=["default","dark","graphite","eightbit","hub","paper"];function changeTheme(e,t,n){if(document.getElementById("theme-css"))"default"==e||(document.getElementById("theme-css").disabled=!1);else{var o=document.createElement("link");o.id="theme-css",o.rel="stylesheet",o.href="https://s.anw.red/anyway.fm/theme.min.css",document.head.appendChild(o)}for(var a=0;a<themeList.length;a++)document.body.classList.remove("theme-"+themeList[a]);if(document.body.classList.add("theme-"+e),0==t){var s=new Date;s.setDate(n),s.toUTCString(),document.cookie="anyway-theme="+e+"; expires="+s+"; path=/;"}document.getElementById("favicon16").href="https://s.anw.red/anyway.fm/favicon/theme-"+e+"-16.png",document.getElementById("favicon32").href="https://s.anw.red/anyway.fm/favicon/theme-"+e+"-32.png",document.getElementById("favicon96").href="https://s.anw.red/anyway.fm/favicon/theme-"+e+"-96.png"}function addSwitchBtn(){var e=getCookie("isNewWindow"),t=document.createElement("span");if(document.querySelector(".ref h2")){document.querySelector(".ref h2").appendChild(t),document.querySelector(".ref h2 span").innerHTML="<a onclick='switchNewWindow()' class='switch-target'><span class='target-current'>当前页面打开</span><span class='target-new'>新开页面</span></a>","Yes"==e?document.querySelector(".switch-target").classList.add("new"):document.querySelector(".switch-target").classList.add("current");for(var n=document.querySelectorAll(".ref ol a"),o=0;o<n.length;o++)"Yes"==e&&(n[o].setAttribute("target","_blank"),n[o].setAttribute("rel","noopener"))}}function switchNewWindow(){var e=getCookie("isNewWindow");document.querySelector(".switch-target").classList.toggle("new"),document.querySelector(".switch-target").classList.toggle("current");var t=document.querySelectorAll(".ref ol a");"Yes"==e?(newStatus="No",newTarget="_self"):(newStatus="Yes",newTarget="_blank"),setCookie("isNewWindow",newStatus,1e3);for(var n=0;n<t.length;n++)t[n].setAttribute("target",newTarget),"No"==e&&t[n].setAttribute("rel","noopener")}function getCookie(e){return document.cookie.length>0&&(c_start=document.cookie.indexOf(e+"="),-1!=c_start)?(c_start=c_start+e.length+1,c_end=document.cookie.indexOf(";",c_start),-1==c_end&&(c_end=document.cookie.length),unescape(document.cookie.substring(c_start,c_end))):""}function setCookie(e,t,n){var o=new Date;o.setTime(o.getTime()+24*n*60*60*1e3);var a="expires="+o.toUTCString();document.cookie=e+"="+t+";"+a+";path=/"}function getQueryString(e){var t=new RegExp("(^|&)"+e+"=([^&]*)(&|$)","i"),n=window.location.search.substr(1).match(t);return null!=n?unescape(n[2]):null}function loadScript(e){var t=document.createElement("script");t.type="text/javascript",t.src=e,t.readyState?t.onreadystatechange=function(){"loaded"!=t.readyState&&"complete"!=t.readyState||(t.onreadystatechange=null)}:t.onload=function(){},document.body.appendChild(t)}window.onresize=function(){90===Math.abs(window.orientation)?heightBreakPoint=300:heightBreakPoint=680;var e=document.querySelectorAll(".x-corner");window.innerHeight>heightBreakPoint?(e[0].classList.add("show"),e[1].classList.add("show")):(e[0].classList.remove("show"),e[1].classList.remove("show"))};